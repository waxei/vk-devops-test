# === Конфигурация системы мониторинга ===

# Порт приложения
APP_PORT=8080

# URL для проверки здоровья (Liveness Probe)
TARGET_URL="http://localhost:8080/health"

# Имя сервиса в systemd (нужно для команды restart)
SERVICE_NAME="test-app"

# Интервал проверок (секунды)
CHECK_INTERVAL=5

# Максимальное кол-во неудачных попыток перед рестартом 
MAX_RETRIES=3

# Путь к лог-файлу мониторинга
LOG_FILE="/var/log/test-monitoring/monitor.log"